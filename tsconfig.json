{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": true,
    "declaration": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "files": [
    "src/index.tsx"
  ],
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "utils/*.ts",
    "integration-tests/*.ts"
  ]
}
